    console.log('Cool! 23 is an amazing number');
} else if (favourite === 7) {
    console.log('7 is also a cool number');
} else {
    console.log('Number is neither 7 or 23');
}

if (favourite !== 23) console.log('why not 23'); // !== means not equal



